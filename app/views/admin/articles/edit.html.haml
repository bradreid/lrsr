%div.form
  %h2="Edit: #{@article.title}: #{@article.created_at.to_formatted_s(:short_with_year)}"
  - form_for [:admin, @article], :html => { :multipart => true }, :builder => LrsrFormBuilder do |f|
    = f.error_messages
    = render :partial => "form", :object => f
    %br
    = submit_tag "Update", :class => "btn green left_float"
    
    = link_to "Cancel", admin_articles_path, :class => "btn red left_float"
%br
%br