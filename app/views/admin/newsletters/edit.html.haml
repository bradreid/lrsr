%div.form
  %h2="Edit: #{@newsletter.name}"
  - form_for [:admin, @newsletter], :html => { :multipart => true },:builder => LrsrFormBuilder do |f|
    = f.error_messages
    = render :partial => "form", :object => f
    %br
    = submit_tag "Update", :class => "btn green left_float"
    
    = link_to "Cancel", admin_newsletters_path, :class => "btn red left_float"
%br
%br