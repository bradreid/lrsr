%div.form
  %h2="Edit: #{@event.name}: #{@event.start.to_formatted_s(:short_with_year)}"
  - form_for [:admin, @event], :builder => LrsrFormBuilder do |f|
    = f.error_messages
    = render :partial => "form", :object => f
    %br
    = submit_tag "Update", :class => "btn green left_float"
    
    = link_to "Cancel", admin_events_path, :class => "btn red left_float"
%br
%br