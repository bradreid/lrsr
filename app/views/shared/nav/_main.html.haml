
#header
  %table{:border => 0, :cellpadding => 0, :cellspacing => 0, :width => '100%', :align => 'center'}
    %tr
      %td{:align => 'center'}
        #header_image
          =link_to image_tag('header-1680.png', :width => "100%"), root_path
  %table{:border => 0, :cellpadding => 0, :cellspacing => 0, :width => '1024', :align => 'center'}           
    %tr
      %td{:style => 'padding: 10px'}
        .site-title
          =link_to 'Lee River Snow Riders', root_path
      %td{:style => 'padding: 10px;'}
        .nav_links
          - if current_user
            -logout_path = link_to("Logout", destroy_user_session_path)
            -home_link = link_to('LRSR Admin', admin_index_path)
          -else
            -logout_path = nil
            -home_link = link_to('Home', root_path)        
          = [home_link, link_to('Memberships', memberships_path), link_to('Map', '/maps/lrsr-map.pdf'), link_to('Pictures', albums_path), link_to('Contact Us', new_contact_request_path), logout_path].compact.join(' &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;').html_safe